<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MusicAppXamarinForms.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    xmlns:viewModels="clr-namespace:MusicAppXamarinForms.ViewModels;assembly=MusicAppXamarinForms"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance viewModels:MainPageViewModel,
                                     IsDesignTimeCreatable=True}"
    BackgroundColor="{DynamicResource BackgroundColor}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Scrolled="ScrollView_OnScrolled">
            <StackLayout Spacing="0">
                <!--  Now playing  -->
                <Grid Padding="0">
                    <pancakeView:PancakeView
                        Margin="0,25,0,0"
                        CornerRadius="125"
                        Elevation="25"
                        HasShadow="True"
                        HeightRequest="365"
                        HorizontalOptions="Center"
                        VerticalOptions="Fill"
                        WidthRequest="250" />

                    <pancakeView:PancakeView
                        Margin="0,-1,0,25"
                        CornerRadius="0,0,125,125"
                        HeightRequest="365"
                        HorizontalOptions="Center"
                        VerticalOptions="Fill"
                        WidthRequest="250">
                        <pancakeView:PancakeView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped"></TapGestureRecognizer>
                        </pancakeView:PancakeView.GestureRecognizers>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image
                                x:Name="BandImageView"
                                Grid.Row="0"
                                Grid.RowSpan="3"
                                Aspect="AspectFill"
                                HorizontalOptions="Fill"
                                IsVisible="True"
                                Source="{Binding NowPlayingImageSource}"
                                VerticalOptions="Fill" />

                            <pancakeView:PancakeView
                                Grid.Row="1"
                                Grid.RowSpan="2"
                                BackgroundGradientEndColor="{DynamicResource ImageOverlayColor}"
                                BackgroundGradientStartColor="Transparent" />
                            <Label
                                Grid.Row="1"
                                Margin="0,20,0,0"
                                FontAttributes="Bold"
                                FontSize="18"
                                HorizontalOptions="Center"
                                Text="{Binding AlbumTitle}"
                                TextColor="{DynamicResource ImageOverlayTextColor}"
                                VerticalOptions="End" />
                            <Label
                                Grid.Row="2"
                                Margin="0,0,0,47"
                                FontAttributes="Bold"
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="{Binding Artist}"
                                TextColor="{DynamicResource ImageOverlayTextColor}"
                                VerticalOptions="End" />
                        </Grid>
                    </pancakeView:PancakeView>
                </Grid>


                <!--  Tracks  -->
                <CollectionView
                    ItemsSource="{Binding AlbumTracks}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout
                                Padding="37,17"
                                HorizontalOptions="Fill"
                                Orientation="Horizontal">
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="StartAndExpand"
                                    Text="{Binding Title}"
                                    TextColor="{DynamicResource TextColor}"
                                    VerticalOptions="Center" />
                                <Label
                                    FontSize="12"
                                    HorizontalOptions="End"
                                    Text="{Binding Duration}"
                                    TextColor="{DynamicResource TextColor}" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </StackLayout>
        </ScrollView>

        <!--  Playback controls  -->
        <Grid
            Grid.Row="1"
            Padding="27,10,27,35"
            VerticalOptions="End">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ImageButton
                Grid.Column="0"
                Padding="10"
                BackgroundColor="{DynamicResource BackgroundColor}"
                HeightRequest="36"
                HorizontalOptions="Start"
                Source="{DynamicResource ShuffleIcon}"
                VerticalOptions="Center" />
            <StackLayout
                Grid.Column="1"
                Padding="0"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="17"
                VerticalOptions="End">
                <ImageButton
                    Padding="8"
                    BackgroundColor="{DynamicResource BackgroundColor}"
                    HeightRequest="36"
                    Source="{DynamicResource RewindIcon}" />
                <pancakeView:PancakeView
                    Padding="2,0,0,0"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    CornerRadius="36"
                    Elevation="25"
                    HasShadow="True"
                    HeightRequest="36"
                    WidthRequest="34">
                    <forms:AnimationView
                        x:Name="PlayPause"
                        Animation="215-play-pause.json"
                        BackgroundColor="{DynamicResource PrimaryColor}"
                        HorizontalOptions="FillAndExpand"
                        IsPlaying="False"
                        Loop="False"
                        OnClick="AnimationView_OnOnClick"
                        VerticalOptions="FillAndExpand" />
                </pancakeView:PancakeView>
                <ImageButton
                    Padding="8"
                    BackgroundColor="{DynamicResource BackgroundColor}"
                    HeightRequest="36"
                    Source="{DynamicResource FastForwardIcon}" />
            </StackLayout>
            <ImageButton
                Grid.Column="2"
                Padding="10"
                BackgroundColor="{DynamicResource BackgroundColor}"
                HeightRequest="36"
                HorizontalOptions="End"
                Source="{DynamicResource RepeatIcon}"
                VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>