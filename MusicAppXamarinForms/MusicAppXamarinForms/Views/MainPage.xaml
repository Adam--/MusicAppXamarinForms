<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MusicAppXamarinForms.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
    xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    Title="{Binding Title}"
    BackgroundColor="#E8E8E8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <pancakeView:PancakeView
            Grid.Row="0"
            Margin="0,20,0,0"
            CornerRadius="125"
            Elevation="25"
            HasShadow="True"
            HeightRequest="365"
            HorizontalOptions="Center"
            WidthRequest="250" />

        <pancakeView:PancakeView
            Grid.Row="0"
            Margin="0,-1,0,0"
            BorderColor="#70757F"
            BorderThickness="2"
            CornerRadius="0,0,125,125"
            HeightRequest="365"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            WidthRequest="250">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="0"
                    Grid.RowSpan="3"
                    Aspect="AspectFill"
                    HorizontalOptions="Fill"
                    IsVisible="True"
                    Source="band"
                    VerticalOptions="Fill" />

                <pancakeView:PancakeView
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    BackgroundGradientEndColor="Black"
                    BackgroundGradientStartColor="Transparent" />
                <Label
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Daylight"
                    TextColor="White"
                    VerticalOptions="End" />
                <Label
                    Grid.Row="2"
                    Margin="0,0,0,47"
                    FontAttributes="Bold"
                    FontSize="12"
                    HorizontalOptions="Center"
                    Text="Matt and Kim"
                    TextColor="White"
                    VerticalOptions="End" />
            </Grid>
        </pancakeView:PancakeView>

        <Grid
            Grid.Row="1"
            Padding="37,0,37,35"
            VerticalOptions="End">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ImageButton
                Grid.Column="0"
                Padding="10"
                BackgroundColor="#E8E8E8"
                HeightRequest="36"
                HorizontalOptions="Start"
                Source="shuffle"
                VerticalOptions="Center" />
            <StackLayout
                Grid.Column="1"
                Padding="0"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="17"
                VerticalOptions="End">
                <ImageButton
                    Padding="8"
                    BackgroundColor="#E8E8E8"
                    HeightRequest="36"
                    Source="rewind" />
                <pancakeView:PancakeView
                    Padding="2,0,0,0"
                    BackgroundColor="Black"
                    CornerRadius="36"
                    Elevation="25"
                    HasShadow="True"
                    HeightRequest="36"
                    WidthRequest="34">
                    <forms:AnimationView
                        x:Name="PlayPause"
                        Animation="215-play-pause.json"
                        BackgroundColor="Black"
                        HorizontalOptions="FillAndExpand"
                        IsPlaying="False"
                        Loop="False"
                        OnClick="AnimationView_OnOnClick"
                        VerticalOptions="FillAndExpand" />
                </pancakeView:PancakeView>
                <ImageButton
                    Padding="8"
                    BackgroundColor="#E8E8E8"
                    HeightRequest="36"
                    Source="fast_forward" />
            </StackLayout>
            <ImageButton
                Grid.Column="2"
                Padding="10"
                BackgroundColor="#E8E8E8"
                HeightRequest="36"
                HorizontalOptions="End"
                Source="repeat"
                VerticalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>